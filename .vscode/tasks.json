{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build DLL",
            "type": "shell",
            "command": "i686-w64-mingw32-g++",
            "args": [
                "-m32",                        // <<< THIS forces 32-bit mode
                "-shared", "-o", "${workspaceFolder}/build/render.dll",

                "${workspaceFolder}/src/gui.cpp",

                "-I", "${workspaceFolder}/src",
                "-I", "${workspaceFolder}/src/ui/core",
                "-I", "${workspaceFolder}/src/ui/widgets",
                "-I", "${workspaceFolder}/src/ui/widgets/containers",

                "${workspaceFolder}/src/ui/core/Widget.cpp",
                "${workspaceFolder}/src/ui/widgets/Button.cpp",
                "${workspaceFolder}/src/ui/widgets/Checkbox.cpp",
                "${workspaceFolder}/src/ui/widgets/Label.cpp",
                "${workspaceFolder}/src/ui/widgets/Slider.cpp",
                "${workspaceFolder}/src/ui/widgets/containers/Menu.cpp",

                "-static-libgcc",
                "-static-libstdc++",
                "-lgdi32"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Build the project DLL"
        }
    ]
}
